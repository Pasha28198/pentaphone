{
  "extends": ["plugin:react/recommended", "standard", "plugin:jsx-control-statements/recommended"],
  "parser": "babel-eslint",
  "plugins": ["jsx-control-statements", "react", "babel"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "react/jsx-no-undef": [2, { "allowGlobals": true }],
    "no-unused-vars": 1,
    "no-tabs": 0,
    "indent": [2, "tab"],
    "react/display-name": 0
  },
  "globals": {
    "For": true,
    "If": true,
    "When": true,
    "Choose": true,
    "i18n": true,
    "Raven": true,
    "ga": true
  }
}
